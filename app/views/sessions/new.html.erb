<h1>ログイン</h1>
<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>
<%= form_tag sessions_create_path, method: :post do %>
  <div>
    <%= label_tag 'ユーザーID' %>
    <%= text_field_tag :uid %>
  </div>
  <div>
    <%= label_tag 'パスワード' %>
    <%= password_field_tag :pass %>
  </div>
  <%= submit_tag 'ログイン' %>
<% end %>

<%= link_to 'ログアウト', sessions_destroy_path, method: :delete %>